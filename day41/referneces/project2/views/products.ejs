<!-- views/products.ejs -->
<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <title>제품 목록</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>제품 목록</h1>
    <ul>
      <% products.forEach(product => { %>
      <li>
        <h2><%= product.name %></h2>
        <p>가격: $<%= product.price %></p>
        <p>재고: <%= product.stock %></p>
        <a href="/products/<%= product._id %>">상세 보기</a>
      </li>
      <% }) %>
    </ul>
    <a href="/logout">로그아웃</a>
  </body>
</html>
